{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build pgcov",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "./cmd/pgcov"
            ],
            "options": {
                "env": {
                    "CGO_ENABLED": "1"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Build pgcov (Release)",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-ldflags=-s -w",
                "./cmd/pgcov"
            ],
            "options": {
                "env": {
                    "CGO_ENABLED": "1"
                }
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Test All",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v",
                "./..."
            ],
            "options": {
                "env": {
                    "CGO_ENABLED": "1"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Test with Coverage",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v",
                "-cover",
                "-coverprofile=coverage.out",
                "./..."
            ],
            "options": {
                "env": {
                    "CGO_ENABLED": "1"
                }
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Integration Test",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v",
                "-timeout",
                "5m",
                "./internal",
                "-run",
                "TestEndToEndWithTestcontainers"
            ],
            "options": {
                "env": {
                    "CGO_ENABLED": "1"
                }
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Run pgcov",
            "type": "shell",
            "command": "${workspaceFolder}/pgcov${command:pickString,values,.exe,}",
            "args": [
                "run",
                "./testdata/simple",
                "--verbose"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "dependsOn": ["Build pgcov"],
            "problemMatcher": []
        },
        {
            "label": "Clean Build Cache",
            "type": "shell",
            "command": "go",
            "args": [
                "clean",
                "-cache",
                "-testcache"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Go Mod Tidy",
            "type": "shell",
            "command": "go",
            "args": [
                "mod",
                "tidy"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "go",
            "args": [
                "fmt",
                "./..."
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Go Vet",
            "type": "shell",
            "command": "go",
            "args": [
                "vet",
                "./..."
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        }
    ]
}
