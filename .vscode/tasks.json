{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build pgcov",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "./cmd/pgcov"
            ],
            "options": {
                "env": {
                    "CGO_ENABLED": "1"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Unit Test",
            "type": "shell",
            "command": "go test -failfast -p 1 -timeout=300s -parallel=1 .${pathSeparator}${relativeFileDirname}${pathSeparator}... -coverprofile='coverage.out' -json | tparse -all -progress",
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": true
            }
        },
        {
            "label": "Coverage Report",
            "type": "shell",
            "command": "go tool cover -html='coverage.out'",
            "problemMatcher": [
                "$go"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
                {
                    "label": "Lint",
                    "type": "shell",
                    "command": "golangci-lint run",
                    "problemMatcher": [
                        "$go"
                    ],
                    "group": "test",
                    "presentation": {
                        "reveal": "always",
                        "panel": "new"
                    }
                },

        {
            "label": "Clean Build Cache",
            "type": "shell",
            "command": "go",
            "args": [
                "clean",
                "-cache",
                "-testcache"
            ],
            "group": "none",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
