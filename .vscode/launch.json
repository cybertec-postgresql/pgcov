{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch pgcov",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/pgcov",
            "env": {
                "CGO_ENABLED": "1"
            },
            "args": [
                "run",
                "./testdata/simple",
                "--verbose"
            ],
            "showLog": false
        },
        {
            "name": "Launch pgcov with custom args",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/pgcov",
            "env": {
                "CGO_ENABLED": "1"
            },
            "args": [],
            "showLog": false
        },
        {
            "name": "Test Current Package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "env": {
                "CGO_ENABLED": "1"
            },
            "showLog": false
        },
        {
            "name": "Test Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "env": {
                "CGO_ENABLED": "1"
            },
            "args": [
                "-test.run",
                "${selectedText}"
            ],
            "showLog": false
        },
        {
            "name": "Integration Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/internal",
            "env": {
                "CGO_ENABLED": "1"
            },
            "args": [
                "-test.v",
                "-test.run",
                "TestEndToEndWithTestcontainers",
                "-test.timeout",
                "5m"
            ],
            "showLog": false
        }
    ]
}
